{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noLib": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src", "example", "__tests__"],
  "exclude": ["node_modules"]
}
